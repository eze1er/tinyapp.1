<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li><a class="nav-item nav-link" href="/urls">My URLs</a></li>
        <li>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if (username) { %>
        <!-- <form class="form-inline my-1" action="/logout" method="POST"> -->
          Logged in as: <%= username %>
          <button type="submit" class="btn btn-outline-primary ml-3">
            <a href="/logout">Logout</a>
            
          </button>
        <!-- </form> -->

      <% } else { %>
        <!-- <a class="btn btn-primary" href="/login">Login</a> -->
        <form class="form-inline my-1" action="/login" method="POST">
          <!-- Login in as: <%= username %> -->
          <input type="text" name="username" placeholder="username">
          <button type="submit" class="btn btn-outline-primary ml-3">
            Login
          </button>
        </form>
      <% } %>
    </div>
  </nav>
</header>
